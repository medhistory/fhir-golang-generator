<?xml version="1.0" encoding="UTF-8"?>
<CodeSystem xmlns="http://hl7.org/fhir">
  <url value="http://terminology.hl7.org/CodeSystem/consentaction"/>
  <name value="ConsentActionCodes"/>
  <title value="Consent Action Codes"/>
  <status value="draft"/>
  <experimental value="false"/>
  <description value="This value set includes example Consent Action codes."/>
  <copyright value="This is an example set."/>
  <caseSensitive value="true"/>
  <content value="complete"/>
  <concept>
    <code value="collect"/>
    <display value="Collect"/>
    <definition value="Gather retrieved information for storage"/>
  </concept>
  <concept>
    <code value="access"/>
    <display value="Access"/>
    <definition value="Retrieval without permitting collection, use or disclosure. e.g., no screen-scraping for collection, use or disclosure (view-only access)"/>
  </concept>
  <concept>
    <code value="use"/>
    <display value="Use"/>
    <definition value="Utilize the retrieved information"/>
  </concept>
  <concept>
    <code value="disclose"/>
    <display value="Disclose"/>
    <definition value="Transfer retrieved information"/>
  </concept>
  <concept>
    <code value="correct"/>
    <display value="Access and Correct"/>
    <definition value="Allow retrieval of a patient's information for the purpose of update or rectify"/>
  </concept>
</CodeSystem>
